<h2>Edit User</h2>

<%= form_for @user, :url => admin_user_path do |u| %>

  <%= u.label :name %><br />
  <%= u.text_field :name %></p>
  
  <p><%= u.label :email %><br />
  <%= u.text_field :email %>
  
  <p><%= u.label :password %><br />
  <%= u.password_field :password %></p>
  
  <p><%= u.label :timezone %><br />
  <%= u.time_zone_select :time_zone, nil, :default => 'UTC' %></p>

  <p><%= u.label 'Admin' %><br />
  <%= u.check_box :is_admin, :disabled => if_editing_myself? %></p>

  <p><%= u.label 'Active' %><br />
  <%= u.check_box :is_active, :disabled => if_editing_myself? %></p>
  
  <p><%= u.submit "Update" %></p>
  
<% end %>

<%= render :partial => "footer" %>